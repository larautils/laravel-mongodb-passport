{
    "name"       : "larautils/mongodb-passport",
    "description": "A package to allow laravel/passport use with jenssegers/laravel-mongodb",
    "license"    : "MIT",
    "keywords"   : [
        "laravel", "laravel-mongodb", "mongodb-passport", "laravel-passport", "mongodb", "passport", "larautils"
    ],

    "authors": [
        {
            "name" : "Bruno Goncalves",
            "email": "bugotech@gmail.com"
        }
    ],

    "require": {
        "illuminate/support": "5.6.*",
        "jenssegers/mongodb": "3.4.*",
        "laravel/passport"  : "5.0.*"
    },

    "autoload": {
        "psr-4": {
            "LaraUtils\\MongoDb\\Password\\": "src/"
        }
    },

    "extra"  : {
        "laravel": {
            "providers": [
                "LaraUtils\\MongoDb\\Passport\\PassportServiceProvider"
            ]
        }
    },

    "minimum-stability": "dev",
    "prefer-stable"    : true
}
